@model CMCS.Models.EditUserRolesViewModel

@{
    ViewData["Title"] = "Edit Roles";
}

<div class="manage-users-wrapper">
    <div class="container-fluid" style="max-width: 900px;">
        <h1 class="page-title">Edit Roles for @Model.UserName</h1>
        <hr />
        <div class="dashboard-card">
            <form method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" for="@Model.Roles[i].IsSelected">
                                @Model.Roles[i].RoleName
                            </label>
                        </div>
                    }
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Update Roles</button>
                    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>