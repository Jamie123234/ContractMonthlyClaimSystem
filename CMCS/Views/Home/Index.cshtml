@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="full-width-page">

    <style>
        .hero-section {
            background: linear-gradient(135deg, #4F46E5 0%, #818CF8 100%);
            color: white;
            padding: 120px 0 100px;
            margin: 0;
            width: 100%;
        }

        .hero-content {
            max-width: 900px;
            margin: 0 auto;
            text-align: center;
            padding: 0 24px;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 24px;
            letter-spacing: -0.02em;
            line-height: 1.1;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            opacity: 0.95;
            font-weight: 400;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-hero-primary {
            background: white;
            color: #4F46E5;
            padding: 16px 40px;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: 10px;
            border: none;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-hero-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                color: #4F46E5;
            }

        .btn-hero-outline {
            background: transparent;
            color: white;
            padding: 16px 40px;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: 10px;
            border: 2px solid white;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-hero-outline:hover {
                background: white;
                color: #4F46E5;
                transform: translateY(-2px);
            }

        .features-section {
            padding: 100px 0;
            background: white;
            margin: 0;
            width: 100%;
        }

        .features-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .section-header {
            text-align: center;
            margin-bottom: 70px;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 16px;
        }

        .section-description {
            font-size: 1.25rem;
            color: #4B5563;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.7;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
        }

        .feature-card {
            text-align: center;
            padding: 40px 30px;
            border-radius: 16px;
            background: #F9FAFB;
            transition: all 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(79, 70, 229, 0.15);
                background: white;
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #4F46E5, #818CF8);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            color: white;
            font-size: 36px;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 16px;
        }

        .feature-description {
            font-size: 1rem;
            color: #4B5563;
            line-height: 1.6;
        }

        .cta-section {
            background: linear-gradient(135deg, #4F46E5 0%, #3B82F6 100%);
            padding: 100px 0;
            color: white;
            text-align: center;
            margin: 0;
            width: 100%;
        }

        .cta-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .cta-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 24px;
        }

        .cta-description {
            font-size: 1.25rem;
            opacity: 0.95;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .portal-cards {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 24px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .portal-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 40px 30px;
            border-radius: 16px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: block;
            flex-basis: 280px; /* Set a base width */
            flex-grow: 1; /* Allow cards to grow */
        }

            .portal-card:hover {
                background: white;
                color: #4F46E5;
                transform: scale(1.05);
                border-color: white;
                text-decoration: none;
            }

        .portal-icon {
            font-size: 3.5rem;
            display: block;
            margin-bottom: 20px;
        }

        .portal-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .portal-subtitle {
            font-size: 1rem;
            opacity: 0.9;
        }

        .portal-card:hover .portal-subtitle {
            opacity: 0.7;
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.125rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .cta-title {
                font-size: 2rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                <i class="fas fa-file-invoice-dollar"></i><br />
                Contract Monthly Claim System
            </h1>
            <p class="hero-subtitle">
                Streamline your claims process with our modern platform for lecturers to submit monthly contract claims and administrators to efficiently review and approve them.
            </p>
            <div class="hero-buttons">
                <a href="/Identity/Account/Login" class="btn-hero-primary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a href="/Identity/Account/Register" class="btn-hero-outline">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            </div>
        </div>
    </section>

    <section class="features-section">
        <div class="features-container">
            <div class="section-header">
                <h2 class="section-title">Why Choose CMCS?</h2>
                <p class="section-description">
                    A comprehensive solution designed to make claim management effortless for both lecturers and administrators.
                </p>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-upload"></i>
                    </div>
                    <h3 class="feature-title">Easy Submission</h3>
                    <p class="feature-description">
                        Submit claims with detailed work hours and supporting documents in just a few minutes. Our intuitive interface guides you through every step.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="feature-title">Real-Time Tracking</h3>
                    <p class="feature-description">
                        Monitor your claim submissions in real-time with comprehensive dashboards. Always know the status of your claims at a glance.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="feature-title">Quick Approval</h3>
                    <p class="feature-description">
                        Administrators can review and process claims efficiently with all details and documents readily available in one place.
                    </p>
                </div>
            </div>
        </div>
    </section>

</div>
<section class="cta-section">
    <div class="cta-container">
        <h2 class="cta-title">Ready to Get Started?</h2>
        <p class="cta-description">
            Choose your portal below to access the Contract Monthly Claim System
        </p>

        <div class="portal-cards">
            @if (SignInManager.IsSignedIn(User))
            {
                var user = await UserManager.GetUserAsync(User);
                if (await UserManager.IsInRoleAsync(user, "Lecturer"))
                {
                    <a asp-controller="LecturerApp" asp-action="Index" class="portal-card">
                        <i class="fas fa-chalkboard-teacher portal-icon"></i>
                        <div class="portal-title">Lecturer Portal</div>
                        <div class="portal-subtitle">Submit and track your claims</div>
                    </a>
                }
                if (await UserManager.IsInRoleAsync(user, "ProgramCoordinator"))
                {
                    <a asp-controller="CoordinatorApp" asp-action="Index" class="portal-card">
                        <i class="fas fa-tasks portal-icon"></i>
                        <div class="portal-title">Coordinator Portal</div>
                        <div class="portal-subtitle">Manage and review claims</div>
                    </a>
                }
                if (await UserManager.IsInRoleAsync(user, "Admin"))
                {
                    <a asp-controller="AdminDashboard" asp-action="Index" class="portal-card">
                        <i class="fas fa-user-shield portal-icon"></i>
                        <div class="portal-title">Administrator Portal</div>
                        <div class="portal-subtitle">Oversee the entire system</div>
                    </a>
                }
            }
            else
            {
                <a href="/Identity/Account/Login" class="portal-card">
                    <i class="fas fa-chalkboard-teacher portal-icon"></i>
                    <div class="portal-title">Lecturer Portal</div>
                    <div class="portal-subtitle">Login to submit claims</div>
                </a>
                <a href="/Identity/Account/Login" class="portal-card">
                    <i class="fas fa-tasks portal-icon"></i>
                    <div class="portal-title">Coordinator Portal</div>
                    <div class="portal-subtitle">Login to manage claims</div>
                </a>
                <a href="/Identity/Account/Login" class="portal-card">
                    <i class="fas fa-user-shield portal-icon"></i>
                    <div class="portal-title">Administrator Portal</div>
                    <div class="portal-subtitle">Login to oversee system</div>
                </a>
            }
        </div>
    </div>
</section>