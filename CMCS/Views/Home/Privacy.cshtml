@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="full-width-page" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; padding: 3rem 1rem;">
    <div style="max-width: 1200px; margin: 0 auto;">

        <!-- Header -->
        <div class="text-center mb-4" style="color: white;">
            <div style="display: inline-flex; align-items: center; justify-content: center; width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin-bottom: 1rem;">
                <i class="fas fa-shield-alt" style="font-size: 1.8rem;"></i>
            </div>
            <h1 class="fw-bold mb-2" style="font-size: 2.5rem;">Privacy Policy</h1>
            <p style="opacity: 0.9; font-size: 1rem;">Last updated: October 18, 2025</p>
        </div>

        <!-- Main Content Card -->
        <div class="shadow-lg" style="background: white; border-radius: 16px; padding: 3rem; margin-bottom: 2rem;">

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 3rem;">

                <!-- Left Column -->
                <div>
                    <!-- Introduction -->
                    <section class="mb-4">
                        <p style="color: #475569; line-height: 1.7; font-size: 0.95rem;">
                            At CMCS, we take your privacy seriously. This policy explains how we collect, use, and protect your information when you use our platform.
                        </p>
                    </section>

                    <!-- Information We Collect -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-database" style="color: #667eea;"></i>
                            Information We Collect
                        </h2>
                        <div style="color: #475569; line-height: 1.7; font-size: 0.9rem;">
                            <strong style="color: #334155;">Personal Information:</strong> Name, email, password (encrypted)<br>
                            <strong style="color: #334155;">Claim Data:</strong> Contracts, claims, financial records<br>
                            <strong style="color: #334155;">Technical Data:</strong> IP address, browser info, cookies
                        </div>
                    </section>

                    <!-- How We Use It -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-cogs" style="color: #667eea;"></i>
                            How We Use Your Data
                        </h2>
                        <ul style="color: #475569; line-height: 1.7; font-size: 0.9rem; padding-left: 1.25rem;">
                            <li>Provide and improve our services</li>
                            <li>Manage your account and authentication</li>
                            <li>Send notifications and updates</li>
                            <li>Ensure security and prevent fraud</li>
                            <li>Comply with legal obligations</li>
                        </ul>
                    </section>

                    <!-- Data Security -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-lock" style="color: #667eea;"></i>
                            Data Security
                        </h2>
                        <div style="display: grid; gap: 0.75rem;">
                            <div style="padding: 0.75rem; background: #f8fafc; border-radius: 8px; border-left: 3px solid #667eea;">
                                <strong style="color: #334155; font-size: 0.9rem;">🔒 SSL/TLS Encryption</strong>
                                <p style="color: #64748b; font-size: 0.85rem; margin: 0.25rem 0 0 0;">All data transmissions are encrypted</p>
                            </div>
                            <div style="padding: 0.75rem; background: #f8fafc; border-radius: 8px; border-left: 3px solid #667eea;">
                                <strong style="color: #334155; font-size: 0.9rem;">🛡️ Secure Storage</strong>
                                <p style="color: #64748b; font-size: 0.85rem; margin: 0.25rem 0 0 0;">Protected databases with access controls</p>
                            </div>
                            <div style="padding: 0.75rem; background: #f8fafc; border-radius: 8px; border-left: 3px solid #667eea;">
                                <strong style="color: #334155; font-size: 0.9rem;">✓ Authentication</strong>
                                <p style="color: #64748b; font-size: 0.85rem; margin: 0.25rem 0 0 0;">Strong password requirements</p>
                            </div>
                        </div>
                    </section>
                </div>

                <!-- Right Column -->
                <div>
                    <!-- Your Rights -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-user-shield" style="color: #667eea;"></i>
                            Your Rights
                        </h2>
                        <div style="color: #475569; line-height: 1.7; font-size: 0.9rem;">
                            You have the right to:
                            <ul style="padding-left: 1.25rem; margin-top: 0.5rem;">
                                <li><strong>Access</strong> your personal data</li>
                                <li><strong>Correct</strong> inaccurate information</li>
                                <li><strong>Delete</strong> your data (subject to legal requirements)</li>
                                <li><strong>Export</strong> your data to another service</li>
                                <li><strong>Object</strong> to certain data processing</li>
                                <li><strong>Withdraw consent</strong> at any time</li>
                            </ul>
                        </div>
                    </section>

                    <!-- Cookies -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-cookie-bite" style="color: #667eea;"></i>
                            Cookies & Tracking
                        </h2>
                        <p style="color: #475569; line-height: 1.7; font-size: 0.9rem;">
                            We use cookies to enhance your experience, remember preferences, analyze usage, and improve security.
                            You can control cookies through your browser settings.
                        </p>
                    </section>

                    <!-- Third Parties -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-handshake" style="color: #667eea;"></i>
                            Third-Party Services
                        </h2>
                        <p style="color: #475569; line-height: 1.7; font-size: 0.9rem;">
                            We may use third-party providers for hosting, analytics, and payment processing. These providers are
                            contractually obligated to protect your data. <strong>We do not sell your information.</strong>
                        </p>
                    </section>

                    <!-- Data Retention -->
                    <section class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-clock" style="color: #667eea;"></i>
                            Data Retention
                        </h2>
                        <p style="color: #475569; line-height: 1.7; font-size: 0.9rem;">
                            We retain your data only as long as necessary to provide services and meet legal obligations.
                            Data is securely deleted or anonymized when no longer needed.
                        </p>
                    </section>

                    <!-- Contact -->
                    <section>
                        <h2 class="fw-bold mb-3" style="color: #1e293b; font-size: 1.4rem; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-envelope" style="color: #667eea;"></i>
                            Contact Us
                        </h2>
                        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; border-radius: 12px; color: white;">
                            <p style="margin-bottom: 1rem; font-size: 0.9rem; opacity: 0.95;">Questions about this policy? Reach out to us:</p>
                            <div style="font-size: 0.9rem; line-height: 1.8;">
                                <div><strong>Email:</strong> <a href="mailto:privacy@cmcs.com" style="color: white; text-decoration: underline;">privacy@cmcs.com</a></div>
                                <div><strong>Phone:</strong> +27 (0) 123-4567</div>
                                <div><strong>Location:</strong> Cape Town, South Africa</div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>

        <!-- Footer Note -->
        <div class="text-center" style="padding: 1.5rem; background: rgba(255,255,255,0.1); border-radius: 12px; backdrop-filter: blur(10px); color: white;">
            <p style="margin: 0; font-size: 0.9rem;">
                <i class="fas fa-info-circle" style="margin-right: 0.5rem;"></i>
                We may update this policy from time to time. Significant changes will be communicated via email or platform notification.
            </p>
        </div>
    </div>
</div>