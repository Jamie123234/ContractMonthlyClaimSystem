@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="full-width-page" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 3rem 1rem;">
    <div class="shadow-lg" style="max-width: 1000px; background: white; border-radius: 16px; overflow: hidden; width: 100%; display: flex; flex-wrap: wrap;">

        <!-- Left Panel - Login Form -->
        <div style="flex: 1 1 58.33%; min-width: 300px; padding: 3rem;">
            <div class="mb-4">
                <h1 class="fw-bold mb-2" style="color: #2d3748;">Welcome Back</h1>
                <p class="text-muted">Sign in to continue to your account</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border-radius: 8px;" />
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="border-radius: 8px;" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="border-radius: 4px;" />
                        <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" style="color: #667eea; text-decoration: none; font-weight: 600; font-size: 0.9rem;">Forgot Password?</a>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 8px; color: white; font-weight: 600; padding: 14px;">
                    Sign In
                </button>

                <div class="text-center mb-3">
                    <span class="text-muted">Don't have an account?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #667eea; text-decoration: none; font-weight: 600;">Create Account</a>
                </div>

                <div class="text-center">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted" style="text-decoration: none; font-size: 0.9rem;">Resend email confirmation</a>
                </div>
            </form>
        </div>

        <!-- Right Panel - External Logins -->
        <div style="flex: 1 1 41.67%; min-width: 300px; padding: 3rem; background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%); display: flex; flex-direction: column; justify-content: center;">
            <div class="text-white">
                <h3 class="fw-bold mb-3">Quick Sign In</h3>
                <p class="mb-4" style="opacity: 0.8;">Access your account instantly using your social accounts</p>

                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-light" role="alert">
                            <p class="mb-2 text-dark">No external authentication services are configured.</p>
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-dark" style="text-decoration: underline;">Learn how to set up external authentication</a>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-3">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-light btn-lg" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="border-radius: 8px; font-weight: 600;">
                                        <i class="bi bi-@provider.Name.ToLower()"></i> Continue with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }

                <div class="mt-5 pt-4" style="border-top: 1px solid rgba(255,255,255,0.2);">
                    <p class="small mb-0" style="opacity: 0.7;">Secure authentication powered by industry-standard protocols</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}